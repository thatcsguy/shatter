{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": [
      "node"
    ],
    "outDir": "build/node"
  },
  "include": [
    "vite.config.ts",
    "scripts",
    "**/*.config.ts",
    "**/*.config.js",
    "**/*.cjs"
  ],
  "exclude": [
    "src"
  ]
}
